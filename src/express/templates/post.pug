extends layout.pug

block content
  -
    const formatDate = (dateString) => {
      const date = new Date(dateString);
      const options = {
        day: `numeric`,
        month: `numeric`,
        year: `numeric`,
        hour: `numeric`,
        minute: `numeric`,
      };
      return date.toLocaleString(`ru-RU`, options);
    }
  include partials/header-post.pug
  main
    section.post
      h1.visually-hidden Пост
      section.post__content
        h2.visually-hidden Основное содержание
        .post__wrapper
          .post__head
            a.post__backwards.button.button--backwards(href='#') Назад
            time.post__date(datetime='2019-03-21T20:33') #{formatDate(post.createdAt)}
            h2.post__title.title.title--main #{post.title}
            ul.post__themes.themes
              each category in post.categories
                li.themes__item
                  a.themes__item-link(href='#') #{category.name} !{' '}
                    sup #{category.count}
                  button.themes__remove-btn(type='button') Удалить категорию

          include post/photo.pug
          .post__text
            h3 #{post.title}
            p #{post.fullText}
      .post__wrapper.post__wrapper--comments
        section.post__comments.comments
          include post/comments.pug
            //- include post/error.pug
